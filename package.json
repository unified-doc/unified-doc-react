{
  "name": "unified-doc-react",
  "version": "1.0.0",
  "description": "react wrapper for unified-doc",
  "license": "MIT",
  "homepage": "https://github.com/unified-doc/unified-doc-react",
  "repository": "unified-doc/unified-doc-react",
  "bugs": "https://github.com/unified-doc/unified-doc-react/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "keywords": [
    "unified",
    "doc",
    "react",
    "document",
    "file",
    "content",
    "unist",
    "hast",
    "parse",
    "html",
    "markdown",
    "text",
    "compile",
    "export",
    "annotate",
    "highlight",
    "nlp",
    "search"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "build": "microbundle --jsx React.createElement",
    "clean": "rm -rf dist",
    "dev": "microbundle watch --jsx React.createElement",
    "lint": "xo --fix; tsc",
    "prepare": "npm run clean; npm run build",
    "test": "jest --watch",
    "test:run": "jest"
  },
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "source": "index.js",
  "typings": "types/index.d.ts",
  "dependencies": {
    "rehype-react": "^6.0.0",
    "unified-doc": "^1.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.39",
    "babel-jest": "^26.1.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "microbundle": "^0.12.2",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rehype-toc": "^3.0.1",
    "typescript": "^3.9.5",
    "xo": "^0.32.0"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm prepare; npm run lint; npm run test:run"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "env": [
      "jest"
    ],
    "extends": [
      "xo-react"
    ],
    "prettier": true,
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-warning-comments": "off",
      "padding-line-between-statements": "off",
      "react/function-component-definition": "off",
      "react/prop-types": "off"
    }
  }
}
